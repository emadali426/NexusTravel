@model TravelNexus.Web.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


<section id="content">
    <div class="container">
        <div id="main" class="entry-content main-content">
            <div class="woocommerce">
                <div class="woocommerce-notices-wrapper"></div>
                <div class="container text-center" style="margin-top:60px">
                    <h1>Change your Password </h1>
                </div>
                <form action="/Account/ResetPassword" method="post" class="woocommerce-ResetPassword lost_reset_password text-center">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    @Html.HiddenFor(model => model.Id)
                    @*<div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "woocommerce-Input woocommerce-Input--text input-text" })
                </div>
            </div>*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "woocommerce-Input border-button  woocommerce-Input--text input-text" })
                    </div>

                    <div class="form-group" style="margin-top:15px;">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "woocommerce-Input border-button  woocommerce-Input--text input-text" })
                    </div>

                    <div class="clear"></div>


                    <p class="woocommerce-form-row form-row">
                        @*<input type="hidden" name="wc_reset_password" value="true">*@
                        <button type="submit" class="woocommerce-Button button" value="Reset password">Reset password</button>
                    </p>

                    <input type="hidden" id="woocommerce-lost-password-nonce" name="woocommerce-lost-password-nonce" value="1a4dbaa893"><input type="hidden" name="_wp_http_referer" value="/my-account/lost-password/">
                </form>
            </div>
        </div>
    </div>
</section>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
