@model Fawaterk.Service.Package
@{
    ViewBag.Title = "Edit Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="content" jstcache="0">
    <div class="container" jstcache="0">
        <form action="PackageEdit" enctype="multipart/form-data" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger message-error2" })
            <div class="row">
                <div class="col-md-4" style="margin-bottom:15px">
                    <input id="titleId" required type="text" value="@Model.Title" name="Title" class="form-control" style="border-color: #2b9ebd" placeholder="Title" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4" style="margin-bottom:15px">
                    <label>Offer Start Date</label>
                    <input type="date" required value="@Model.OfferStartDate.ToString("yyyy-MM-dd")" name="OfferStartDate" class="form-control" style="border-color: #2b9ebd" placeholder="Offer Start Date" />
                </div>
                <label>Offer End Date</label>
                <div class="col-md-4" style="margin-bottom:15px">
                    <input type="date" required value="@Model.OfferEndDate.ToString("yyyy-MM-dd")" name="OfferEndDate" class="form-control" style="border-color: #2b9ebd" placeholder="Offer End Date" />
                </div>
            </div>
            <div class="row">
                <label>Package Start Date</label>
                <div class="col-md-4" style="margin-bottom:15px">
                    <input type="date" required value="@Model.PackageStartDate.ToString("yyyy-MM-dd")" name="PackageStartDate" class="form-control" style="border-color: #2b9ebd" placeholder="Package Start Date" />
                </div>
                <label>Package End Date</label>
                <div class="col-md-4" style="margin-bottom:15px">
                    <input type="date" required value="@Model.PackageEndDate.ToString("yyyy-MM-dd")" name="PackageEndDate" class="form-control" style="border-color: #2b9ebd" placeholder="Package End Date" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4" style="margin-bottom:15px">
                    <label>Price:</label>
                    <input type="number" required name="Price" value="@Model.Price" class="form-control" style="border-color: #2b9ebd" placeholder="Price" />
                    <label>Images Width:</label>
                    <input type="number" disabled required name="Width" value="@Model.Width" class="form-control" style="border-color: #2b9ebd" placeholder="Width" />
                    <label>Images Height:</label>
                    <input type="number" disabled required name="Height" value="@Model.Height" class="form-control" style="border-color: #2b9ebd" placeholder="Height" />
                </div>
            </div>
            <div class="row">
                <label>Append New Package Images:</label>
                <div id="FolderImagesPathId" class="col-md-4" style="margin-bottom:15px">
                    <input type="file" name="ImgsFiles" multiple accept="image/*" value="Choose Images" />
                </div>
            </div>
            <div class="row">
                <label>Write Html Description:</label>
                <div class="col-md-12" style="margin-bottom:15px">
                    @*<textarea required name="DescriptionFileName" rows="6" style="border-color: #2b9ebd" class="form-control" placeholder="Put Description in HTML Format Here"></textarea>*@
                    <textarea required style="background-color:white" name="PackageDescription" rows="10" cols="100">@Model.PackageDescription</textarea>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Edit Package" class="pull-right btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</section>



