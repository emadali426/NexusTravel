@model TravelNexus.Web.Models.HotelBookConfirmationModel
<div class="container">
    <div class="row">
        <div id="main" class="col-sm-8 col-md-9">
            <div class="booking-information travelo-box">
                <h2>Booking Confirmation</h2>
                <hr>
                <div class="booking-confirmation clearfix">
                    <i class="soap-icon-recommend icon circle"></i>
                    <div class="message">
                        <h4 class="main-message">Thank You. Your Booking Order is Confirmed Now.</h4>
                        <p>A confirmation email has been sent to your provided email address.</p>
                    </div>
                    @*<a href="#" class="button btn-small print-button uppercase">print Details</a>*@
                </div>
                <hr>
                <h2>Personal Information</h2>
                <dl class="term-description">
                    <dt>Booking number:</dt>
                    <dd>@Model.ConfirmationNo</dd>
                    <dt>First name:</dt>
                    <dd>@Model.FirstName.ToUpperInvariant()</dd>
                    <dt>Last name:</dt>
                    <dd>@Model.LastName.ToUpperInvariant()</dd>
                    <dt>E-mail address:</dt>
                    <dd>@Model.Email.ToUpperInvariant()</dd>
                    <dt>Country:</dt>
                    <dd>@Model.Country.ToUpperInvariant()</dd>
                </dl>
                <h2>Booking Information</h2>
                <dl class="term-description">
                    <dt>Hotel name:</dt>
                    <dd>@Model.HotelName.ToUpperInvariant()</dd>
                    <dt>Room:</dt>
                    <dd>@Model.RoomName.ToUpperInvariant()</dd>
                    <dt>CheckIn Date:</dt>
                    <dd>@Model.CheckInDate.ToString("MM dd, yyyy")</dd>
                    <dt>CheckOut Date:</dt>
                    <dd>@Model.CheckOutDate.ToString("MM dd, yyyy")</dd>
                    <dt>Booking Date:</dt>
                    <dd>@Model.BookingDate.ToString("MM dd, yyyy")</dd>
                    <dt>Invoice number:</dt>
                    <dd>@Model.InvoiceNumber</dd>
                    @*<dt>Hotel Confirmation No:</dt>
                        <dd>@Model.HotelConfirmationNo</dd>*@
                </dl>
                <hr>
                <h2>Payment</h2>
                <p>Payment is made by @Model.PaymentType.</p>
                <hr>
                <hr>
                <h2>Cancellation Policy</h2>
                <p>@Model.TextPolicy</p>
                <p>Last Cancellation Deadline: @Model.LastCancellationDeadline.ToString("MM dd, yyyy")</p>
                <br>
                <hr>
                @*<h2>View Booking Details</h2>
