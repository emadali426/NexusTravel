@model TravelNexus.Web.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<<section id="content">
    <div class="container">
        <div id="main" class="entry-content main-content">
            <div class="woocommerce">
                <div class="woocommerce-notices-wrapper"></div>
                <div class="container text-center" style="margin-top:30px">
                    <h1>Change your Password </h1>
                </div>
                <form action="/Manage/ChangePassword" method="post" class="woocommerce-ResetPassword lost_reset_password text-center">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "woocommerce-Input border-button  woocommerce-Input--text input-text" })
                    </div>

                    <div class="form-group" style="margin-top:15px;">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "woocommerce-Input border-button  woocommerce-Input--text input-text" })
                    </div>

                    <div class="form-group" style="margin-top:15px;">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "woocommerce-Input border-button  woocommerce-Input--text input-text" })
                    </div>

                    <div class="clear"></div>


                    <p class="woocommerce-form-row form-row">
                        @*<input type="hidden" name="wc_reset_password" value="true">*@
                        <button type="submit" class="woocommerce-Button button" value="Reset password">Reset password</button>
                    </p>

                    <input type="hidden" id="woocommerce-lost-password-nonce" name="woocommerce-lost-password-nonce" value="1a4dbaa893"><input type="hidden" name="_wp_http_referer" value="/my-account/lost-password/">
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}